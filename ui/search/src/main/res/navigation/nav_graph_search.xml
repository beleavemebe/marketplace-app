<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_search"
    app:startDestination="@id/searchHistoryFragment">

    <fragment
        android:id="@+id/searchHistoryFragment"
        android:name="com.narcissus.marketplace.ui.search.SearchHistoryFragment"
        android:label="SearchHistoryFragment"
        tools:layout="@layout/fragment_search_history">

        <deepLink app:uri="marketplace-app://search-history" />

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.narcissus.marketplace.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">

        <deepLink app:uri="marketplace-app://search?query={query};sort_by={sort_by};department={department}" />

        <argument
            android:name="query"
            app:argType="string" />

        <argument
            android:name="sort_by"
            app:argType="string" />

        <argument
            android:name="department"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>
